<div class="card shadow mb-4">
  <a href="#collapseCardExample" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample">
    <h6 class="m-0 font-weight-bold text-primary"><%= t ".search_title" %></h6>
  </a>
  <div class="collapse show" id="collapseCardExample" style="">
    <div class="card-body">
      <%= search_form_for @filter do |filter| %>
        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <%= filter.text_field :name_cont,
                         class: "form-control", placeholder: t(".name") %>
        </div>
        <div class="input-group mt-16">
          <span class="input-group-addon"><i class="glyphicon glyphicon-record"></i></span>
          <%= filter.text_field :description_cont,
                         class: "form-control", placeholder: t(".description") %>
        </div>
        <%= filter.label :date_created, class: "mt-16" %>
        <div class="row">
          <div class="input-group col-3">
            <span class="input-group-addon"><i class="glyphicon glyphicon-record"></i></span>
            <%= filter.date_field :created_at_gteq,
                          class: "form-control" %>
          </div>
            <div class="input-group col-3">
            <span class="input-group-addon"><i class="glyphicon glyphicon-record"></i></span>
            <%= filter.date_field :created_at_lteq,
                          class: "form-control" %>
          </div>
        </div>
        <%= filter.submit t(".search"), class: "btn btn-success mt-16" %>
      <% end %>
    </div>
  </div>
</div>
