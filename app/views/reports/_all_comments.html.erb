<div class="row">
  <div class="detailBox col-md-12">
    <div class="titleBox">
      <label><%= t ".comment_box" %></label>
    </div>
    <div class="actionBox">
      <ul class="commentList">
        <%= render @comments %>
      </ul>
      <%= render "new_comment" %>
    </div>
  </div>
</div>
 <!-- Modal -->
<%= form_tag comment_path, method: :put, remote: true do %>
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog top-30p">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">t ".edit_comment"</h4>
        </div>
        <div class="modal-body">
          <input type="hidden" id="comment_id" name="comment_id">
          <%= text_area_tag :comment_modal_text, nil, class: "form-control w-100 comment_modal_text" %>
        </div>
        <div class="modal-footer">
          <input type="submit" class="btn btn-default" value="Save"/>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= javascript_pack_tag "comment" %>
