<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("base_title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%=  t "department" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if current_user.admin? %>
                <li><%= link_to t("create_new_department"), new_department_path %></li>
              <% end %>
              <li><%= link_to t("departments_list"), departments_path %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "user" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if current_user.admin? %>
                <li><%= link_to t("create_new_user"), new_user_path %></li>
              <% end %>
              <li><%= link_to t("users_list"), users_path %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), user_path(current_user) %></li>
              <li><%= link_to t("settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t("log_out"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
